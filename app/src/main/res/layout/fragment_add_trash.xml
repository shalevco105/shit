<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.addTrash.AddTrashFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/trashNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trash Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTrashName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:hint="Enter Trash Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/trashNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recipeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTrashName" />

    <EditText
        android:id="@+id/editRecipe"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:inputType="text|textMultiLine"
        android:hint="Enter Recipe"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/recipeTextView"
        app:layout_constraintTop_toBottomOf="@+id/editTrashName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/uploadImageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe" />

    <ImageButton
        android:id="@+id/uploadImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@+id/uploadImageTextView"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/previewTrashImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/saveRecipeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Save"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelRecipeButton"
        app:layout_constraintTop_toBottomOf="@+id/previewTrashImageView" />

    <Button
        android:id="@+id/cancelRecipeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Cancel"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryDark"
        app:layout_constraintStart_toEndOf="@+id/saveRecipeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewTrashImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
